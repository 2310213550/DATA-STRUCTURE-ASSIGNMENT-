#include <stdio.h>

int main() {
    int rows, cols;
    int sparse[10][10];
    int triplet[20][3];
    int i, j, k = 1;

    printf("Enter number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    printf("Enter matrix elements:\n");
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            scanf("%d", &sparse[i][j]);
        }
    }

    // First row of triplet matrix
    triplet[0][0] = rows;
    triplet[0][1] = cols;
    triplet[0][2] = 0;

    // Convert to triplet form
    for(i = 0; i < rows; i++) {
        for(j = 0; j < cols; j++) {
            if(sparse[i][j] != 0) {
                triplet[k][0] = i;
                triplet[k][1] = j;
                triplet[k][2] = sparse[i][j];
                k++;
                triplet[0][2]++;
            }
        }
    }

    // Display triplet matrix
    printf("\nTriplet Representation:\n");
    for(i = 0; i <= triplet[0][2]; i++) {
        printf("%d %d %d\n",
               triplet[i][0],
               triplet[i][1],
               triplet[i][2]);
    }

    return 0;
}
